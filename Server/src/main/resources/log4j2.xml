<?xml version="1.0" encoding="UTF-8"?>

<Configuration packages="org.xdi.oxauth.appender">
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] [%C{6}] (%F:%L) - %m%n" />
		</Console>

		<File name="FILE" fileName="${catalina.base}/logs/oxauth.log"
			append="false">
			<PatternLayout pattern="%d %-5p [%t] [%C{6}] (%F:%L) - %m%n" />
		</File>

		<RollingFile name="OX_PERSISTENCE_FILE"
			fileName="${catalina.base}/logs/oxauth_persistence.log"
			filePattern="${catalina.base}/logs/oxauth_persistence-%d{yyyy-MM-dd}-%i.log">

			<PatternLayout pattern="%d %-5p [%macAddr] [%t] [%C{6}] (%F:%L) - %m%n" />

			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<DefaultRolloverStrategy max="30" />
		</RollingFile>
	</Appenders>

	<Loggers>
		<Logger name="org.apache.log4j.xml" level="debug">
			<AppenderRef ref="A1" />
		</Logger>

		<Root level="info">
			<AppenderRef ref="FILE" />
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>
